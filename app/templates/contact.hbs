<div class="container">
    <div class="row centered-form">
      <div class="col-xs-10 col-sm-offset-1">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Please sign up for Bootsnipp</h3>
          </div>
          <div class="panel-body">
            <form role="form">
              <div class="form-group">
                {{input type="email" name="email" id="email" value=emailAddress class="form-control input-sm" placeholder="Email Address"}}
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <div class="form-group">
                    {{textarea placeholder="Your message. (At least 5 characters.)" value=messageText class="form-control" rows="3"}}
                  </div>
                </div>
              </div>
              <input type="submit" value="Registrar" {{action "saveText"}} disabled={{isDisabled}} class="btn btn-primary btn-lg btn-block" />
            </form>
            <br/><br/>
            {{#if responseMessage}}
              <div class="alert alert-success top-buffer">{{responseMessage}}</div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
</div>
